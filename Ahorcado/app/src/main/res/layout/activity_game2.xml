<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity2"
    android:background="#000000"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#D80A0A"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            app:srcCompat="@drawable/gallows" />

        <ImageView
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="108dp"
            android:paddingLeft="108dp"
            android:paddingTop="23dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/head" />

        <ImageView
            android:id="@+id/body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="120dp"
            android:paddingLeft="120dp"
            android:paddingTop="53dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/body" />

        <ImageView
            android:id="@+id/armLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="100dp"
            android:paddingLeft="100dp"
            android:paddingTop="60dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/arm_left" />

        <ImageView
            android:id="@+id/armRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="124dp"
            android:paddingLeft="124dp"
            android:paddingTop="60dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/arm_right" />

        <ImageView
            android:id="@+id/legLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="101dp"
            android:paddingLeft="101dp"
            android:paddingTop="90dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/leg_left" />

        <ImageView
            android:id="@+id/legRight"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:paddingStart="121dp"
            android:paddingLeft="101dp"
            android:paddingTop="90dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/leg_right" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="273dp"
            android:layout_height="54dp"
            android:paddingLeft="120dp"
            app:srcCompat="@drawable/call" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="360dp"
            android:layout_height="54dp"
            android:paddingLeft="184dp"
            app:srcCompat="@drawable/crash" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:paddingLeft="300dp"

            app:srcCompat="@drawable/devil" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="270dp"
            android:layout_height="121dp"
            android:paddingLeft="167dp"
            android:paddingTop="55dp"
            app:srcCompat="@drawable/doom" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="388dp"
            android:layout_height="110dp"
            android:paddingLeft="189dp"
            android:paddingTop="65dp"
            app:srcCompat="@drawable/dragon" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:paddingLeft="308dp"
            android:paddingTop="65dp"
            app:srcCompat="@drawable/god" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="308dp"
            android:layout_height="169dp"
            android:paddingTop="124dp"
            android:paddingLeft="94dp"
            app:srcCompat="@drawable/last" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:paddingLeft="140dp"
            android:paddingTop="124dp"
            app:srcCompat="@drawable/mortal" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:paddingLeft="293dp"
            android:paddingTop="124dp"
            app:srcCompat="@drawable/resident" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/words"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@android:color/white"
        android:padding="10dp"
        android:orientation="horizontal"
        android:gravity="center"/>

    <GridView
        android:id="@+id/letters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:background="@android:color/black"
        android:numColumns="7"
        android:padding="5dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"/>





</LinearLayout>